@model ProductModel
@{
    ViewData["Title"] = "Dalete product page";
}

<div class="text-center">
    <h1 class="display-4">Realmente deseja apagar o produto (@Model.Name)</h1>
    <a role="button" class="btn btn-danger" asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@Model.Id">Apagar</a>
    <a role="button" class="btn btn-secondary" asp-controller="Product" asp-action="Index">Voltar</a>
</div>
