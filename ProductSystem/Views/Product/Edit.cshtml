@model ProductModel
@{
    ViewData["Title"] = "Edit Product page";
}

<div class="text-center">
    <h1 class="display-4">Editar Produto</h1>

    <div class="text-center">
        <form id="makeConteiner" asp-controller="Product" asp-action="Update" method="post">
            <div class="form-group">
                <input type="hidden" asp-for="Id" />

                <label for="Name">Nome</label>
                <input type="text" class="form-control" placeholder="Nome do produto" asp-for="Name">

                <label for="Price">Price</label>
                <input type="text" class="form-control" placeholder="Preço do produto" asp-for="Price">

                <label for="Quantity">Quantity</label>
                <input type="text" class="form-control" placeholder="Quentidade em estoque" asp-for="Quantity">

                <label for="Description">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Editar</button>
            <a role="button" class="btn btn-secondary" asp-controller="Product" asp-action="Index">Voltar</a>
        </form>
    </div>

</div>
